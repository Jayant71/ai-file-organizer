{
    "appId": "com.smartfileorganizer.app",
    "productName": "Smart File Organizer",
    "directories": {
        "output": "release"
    },
    "files": [
        "dist/**/*",
        "dist-electron/**/*"
    ],
    "win": {
        "target": [
            "nsis",
            "portable"
        ],
        "icon": "public/icon.ico"
    },
    "mac": {
        "target": [
            "dmg",
            "zip"
        ],
        "icon": "public/icon.icns",
        "category": "public.app-category.utilities"
    },
    "linux": {
        "target": [
            "AppImage",
            "deb"
        ],
        "icon": "public/icon.png",
        "category": "Utility"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true
    }
}