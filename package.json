{
  "name": "smart-file-organizer",
  "version": "1.0.0",
  "description": "Cross-platform desktop app to organize local files and Google Drive",
  "main": "dist-electron/main/index.js",
  "author": "Smart File Organizer",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:vite": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "test": "vitest",
    "test:run": "vitest run",
    "package": "npm run build:vite && electron-builder",
    "package:win": "npm run build:vite && electron-builder --win",
    "package:mac": "npm run build:vite && electron-builder --mac",
    "package:linux": "npm run build:vite && electron-builder --linux"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "googleapis": "^128.0.0",
    "mime-types": "^2.1.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.0.4"
  }
}
